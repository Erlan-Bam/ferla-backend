{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["core/*"],
      "@presentation/*": ["presentation/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@config": ["infrastructure/config"],
      "@services/*": ["./services/*"]
    },
    "outDir": "./dist"
  },
  "include": [
    "server.ts",
    "core/**/*.ts",
    "infrastructure/**/*.ts",
    "presentation/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
